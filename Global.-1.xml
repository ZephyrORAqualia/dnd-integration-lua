<!-- Xml UI. See documentation: https://api.tabletopsimulator.com/ui/introUI/ -->
<!-- Dnd-Api UI Elements -->
<Defaults>
    <Button color="black" textColor="white" />
</Defaults>

<VerticalLayout
    id="rollerLayoutBlue"
    height="40"
    width="80"
    allowDragging="true"
    returnToOriginalPositionWhenReleased="false"
    rectAlignment="UpperRight"
    offsetXY="-80 -80"
    visibility="Blue"
    >
    <Button
        onClick="toggleSpellButtons"
        text="Search"
        >
    </Button>
    <VerticalLayout
        id="rollerButtonsBlue"
        height="240"
        width="80"
        active="false"
        >
        <Button text="Spell"  id="Spell"  class="roller" onClick="toggleSpellQuery"></Button>
        <VerticalLayout
            id="spellButtonBlue"
            height="240"
            padding="0 0 1 1"
            width="80"
            active="false"
        >
            <InputField placeholder="Query"  id="spellQuery"  class="roller" onEndEdit="sendSpellRequest"></InputField>
        </VerticalLayout>

        <Button text="Feat"  id="Feat"  class="roller" onClick="toggleFeatQuery"></Button>
        <VerticalLayout
            id="featButtonBlue"
            padding="0 0 1 1"
            height="240"
            width="80"
            active="false"
        >
            <InputField placeholder="Query"  id="featQuery"  class="roller" onEndEdit="sendFeatRequest"></InputField>
        </VerticalLayout>

        <Button text="Psionic"  id="Psionic"  class="roller" onClick="togglePsionicQuery"></Button>
        <VerticalLayout
            id="psionicButtonBlue"
            height="240"
            width="80"
            padding="0 0 1 1"
            active="false"
        >
            <InputField placeholder="Query"  id="psionicQuery"  class="roller" onEndEdit="sendPsionicRequest"></InputField>
        </VerticalLayout>
    </VerticalLayout>
</VerticalLayout>

